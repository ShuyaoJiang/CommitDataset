[+++ b/Vagrantfile, +    install_command_retries: 5,, +    install_command_retries: 0,, +, +    # Retry install command up to $2 times, if failed, +    retry_installcommand() {, +      n=0, +      while true; do, +        #{install_command} $1 && break, +        let n=n+1, +        if [ $n -ge $2 ]; then, +          echo "==> Exhausted retries to install $1", +          return 1, +        fi, +        echo "==> Retrying installing $1, attempt $((n+1))", +        # Add a small delay to increase chance of metalink providing updated list of mirrors, +        sleep 5, +      done, +    }, +, +, +      if [ #{install_command_retries} -eq 0 ], +      then, +      else, +            retry_installcommand $1 #{install_command_retries}, +      fi, +]